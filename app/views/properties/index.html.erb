<h1>物件一覧</h1>

<table>
  <tr>
    <th class="th1">物件名</th>
    <th class="th2">賃料</th>
    <th class="th3">住所</th>
    <th class="th4">築年数</th>
    <th class="th5">備考</th>
    <th colspan="3" class="th6"></th>
  </tr>
  <tr>
    <% @properties.each do |property| %>
    <td><%= property.name %></td>
    <td><%= property.cost %>円</td>
    <td><%= property.address %></td>
    <td><%= property.age %>年</td>
    <td><%= property.note %></td>
    <td><%= link_to '詳細', property_path(property.id) %></td>
    <td><%= link_to '編集', edit_property_path(property.id) %></td>
    <td><%= link_to '削除', property_path(property.id), method: :delete, data: { confirm:'削除してもよろしいですか？' } %>
  </tr>
  <% end %>
</table>

<%= link_to '物件を登録する', new_property_path %>
