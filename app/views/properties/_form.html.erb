<%= form_with(model: @property, local: true) do |f| %>
  <% if @property.errors.any? %>
    <h2><%= @property.errors.count %>件のエラーがあります</h2>
    <ul>
    <% @property.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>

  <ul>
    <li><%= f.label :'物件名' %></li>
    <li><%= f.text_field :name %></li>
    <li><%= f.label :'賃料' %></li>
    <li><%= f.text_field :cost %>円</li>
    <li><%= f.label :'住所' %></li>
    <li><%= f.text_field :address %></li>
    <li><%= f.label :'築年数' %></li>
    <li><%= f.text_field :age %>年</li>
    <li><%= f.label :'備考' %></li>
    <li><%= f.text_area :note %></li>
  </ul>

  <p class='border'></p>

  <% num = 0 %>
  <%= f.fields_for :nearest_stations do |nearest_station| %>
  <h3>最寄り駅<%= num += 1 %></h3>
  <ul>
    <li><%= nearest_station.label :'路線名' %></li>
    <li><%= nearest_station.text_field :line %></li>
    <li><%= nearest_station.label :'駅名' %></li>
    <li><%= nearest_station.text_field :station %></li>
    <li><%= nearest_station.label :'徒歩' %></li>
    <li><%= nearest_station.text_field :minute_walk %>分</li>
  </ul>
  <% end %>

  <% if action_name == 'new' %>
    <%= f.submit '登録する' %>
  <% else %>
    <%= f.submit '更新する' %>
  <% end %>
<% end %>
