<%= form_with(model: @property, local: true) do |f| %>
  <% if @property.errors.any? %>
    <h2><%= @property.errors.count %>件のエラーがあります</h2>
    <ul>
    <% @property.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :'物件名' %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :'賃料' %>
    <%= f.text_field :cost %>
  </div>
  <div>
    <%= f.label :'住所' %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :'築年数' %>
    <%= f.text_field :age %>
  </div>
  <div>
    <%= f.label :'備考' %>
    <%= f.text_area :note %>
  </div>

    <% num = 0 %>
    <%= f.fields_for :nearest_stations do |f| %>
    <h3>最寄り駅<%= num += 1 %></h3>
    <div>
      <%= f.label :'路線名' %>
      <%= f.text_field :line %>
    </div>
    <div>
      <%= f.label :'駅名' %>
      <%= f.text_field :station %>
    </div>
    <div>
      <%= f.label :'徒歩' %>
      <%= f.text_field :minute_walk %>
    </div>
    <% end %>

<%= f.submit '登録 ' %>
<% end %>
