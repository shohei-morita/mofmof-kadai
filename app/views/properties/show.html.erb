<h1>閲覧</h1>

<p>物件名:<%= @property.name %></p>
<p>賃料:<%= @property.cost %>円</p>
<p>住所:<%= @property.address %></p>
<p>築年数 <%= @property.age %></p>
<p>備考 <%= @property.note %></p>

<p class='border'></p>

<% @property.nearest_stations.each_with_index do |nearest_station, num| %>
  <h2>最寄駅<%= num + 1 %></h2>
  <p>路線名 <%= nearest_station.line %></p>
  <p>駅名　<%= nearest_station.station %></p>
  <p>徒歩分数 <%= nearest_station.minute_walk %></p>
  <% num += 1 %>
<% end %>

<%= link_to '編集', edit_property_path %>|
<%= link_to '戻る', properties_path %>
